{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "ES2018",
    "lib": ["ES2019", "ES2020"],
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": ["lib/**/*", "*.ts", "types", "migrate-mongo-config.ts", "UserApp/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts", "migrations"]
}
